@model HammerDrop_Auction_app.Models.LogInViewModel

@{
    ViewData["Title"] = "LogIn";
}
@if (TempData["SessionExpiredMessage"] != null)
{
    <div class="alert alert-warning">
        @TempData["SessionExpiredMessage"]
    </div>
}


<h1>Login</h1>


<hr />
<div style="color: green">@TempData["SuccessMessage"]</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="LogIn">
            <div class="form-group">
                <label asp-for="UserNameorEmail" class="control-label"></label>
                <input asp-for="UserNameorEmail" class="form-control" />
                <span asp-validation-for="UserNameorEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="LogIn" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    Don't have a Account?<a asp-action="Registration">Go to Registration</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
