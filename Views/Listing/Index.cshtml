<h2 class="mt-3">Explore Our Listings</h2>

@if (User.HasClaim("Permission", "Admin"))
{
    <a asp-action="Create" class="btn btn-primary mb-3">Create New Listing</a>
}

<div class="row">
    @foreach (var listing in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="~/images/@listing.ImageName" class="card-img-top" style="height: 250px; object-fit: cover;" alt="Listing Image" />
                <div class="card-body">
                    <h5 class="card-title">@listing.Name</h5>
                    <p class="card-text">@listing.Description</p>
                    @*                 <p class="card-text"><strong>Price:</strong> PKR @listing.Price.ToString("N0")</p> *@
                    @*   <p class="card-text"><strong>Category:</strong> @listing.Category?.Title</p> *@
                </div>
                <div class="card-footer d-flex justify-content-between">
                    @if (User.HasClaim("Permission", "Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@listing.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@listing.Id" class="btn btn-sm btn-danger">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
